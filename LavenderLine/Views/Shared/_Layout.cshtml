                {
                    <a href="@Url.Action("Login", "Account")" class="text-decoration-none d-lg-block d-none ms-1 login-link text-dark">
                        <i class="fas fa-sign-in-alt text-dark"></i> Login
                    </a>
                }
            </div>
        </nav>
