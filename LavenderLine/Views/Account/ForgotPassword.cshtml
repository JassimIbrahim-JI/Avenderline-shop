@model LavenderLine.ViewModels.Accounts.ForgotPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<section class="min-vh-100 d-flex align-items-center bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="card-body p-4 p-lg-5">
                        <!-- Header -->
                        <div class="text-center mb-4">
                            <div class="mb-4">
                                <img src="~/svgs/forgot-password_odai.svg" alt="Password reset" class="img-fluid" style="height: 180px; width: auto;">
                            </div>
                            <h1 class="h3 fw-bold mb-2">Forgot Your Password?</h1>
                            <p class="text-muted">We'll send you a reset link to your email</p>
                        </div>
                        
                        <!-- Form -->
                        <form method="post" asp-action="ForgotPassword" asp-controller="Account" class="auth-form">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 py-2 mb-3" role="alert"></div>
                            
                            <div class="form-floating mb-4">
                                <input type="email" asp-for="Email" class="form-control form-control-lg rounded-3" 
                                       id="emailInput" placeholder="name@example.com" required>
                                <label for="emailInput" class="form-label">Email address</label>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            
                            <div class="d-grid mb-4">
                                <button class="btn btn-dark btn-lg rounded-3 py-3 fw-medium" type="submit">
                                    <span>Send Reset Link</span>
                                    <i class="bi bi-arrow-right ms-2"></i>
                                </button>
                            </div>
                            
                            <div class="text-center">
                                <div class="d-flex justify-content-center gap-4">
                                    <a asp-action="Login" asp-controller="Account" class="text-decoration-none text-muted">
                                        <i class="bi bi-box-arrow-in-right me-1"></i> Back to Login
                                    </a>
                                    <a asp-action="Register" asp-controller="Account" class="text-decoration-none text-muted">
                                        <i class="bi bi-person-plus me-1"></i> Create Account
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>