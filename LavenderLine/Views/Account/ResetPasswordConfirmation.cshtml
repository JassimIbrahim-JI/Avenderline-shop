@{
    ViewBag.Title = "Password Reset Confirmation";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<style>
    .circular-image {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
    }

    .centered-content {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }
</style>

<section class="centered-content">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-md-8 col-lg-6 col-xl-5 text-center">
                <img src="~/img/send-confirmation.png" 
                     class="img-fluid rounded-circle circular-image" 
                     alt="Confirmation Image">
                <h3 class="mt-3">Password Reset Confirmation</h3>
                <p>
                    If an account with that email address exists, a password reset link has been sent to your email.
                    Please check your inbox, and if you do not see the email, please check your spam or junk folder.
                </p>
                <div class="text-center mt-3 pt-2">
                    <p class="small fw-bold mt-1 pt-1 mb-0">
                        Return To <a asp-action="Login" class="link-danger">Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
