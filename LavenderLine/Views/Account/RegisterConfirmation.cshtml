@{
    ViewBag.Title = "Registration Confirmation";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}


<section class="centered-content">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-md-8 col-lg-6 col-xl-5 text-center">
                <img src="~/img/send-confirmation.png" 
                     class="img-fluid rounded-circle circular-image" 
                     alt="Sample image">
                <h3 class="mt-3">Thank you for registering!</h3>
                <p>Please check your email <strong>(@ViewBag.Email)</strong> for a confirmation link. Click the link in the email to confirm your account.</p>
                <p>If you do not see the email in your inbox, please check your spam or junk folder.</p>
                <div class="text-center mt-3 pt-2">
                    <p class="small fw-bold mt-1 pt-1 mb-0">
                        Return To <a asp-action="Login" class="link-danger">Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            Toast.show('success', 'Registration successful! Please check your email to confirm your account.');
        });
    </script>
}