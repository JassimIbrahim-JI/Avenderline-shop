@model LavenderLine.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="auth-container d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="auth-card">
                    <div class="row g-0">
                        <!-- Left Column -->
                        <div class="col-lg-5 card-left">
                            <div class="text-center mb-4">
                                <svg class="lock-animation" width="120" height="120" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M16 11V7C16 4.79086 14.2091 3 12 3C9.79086 3 8 4.79086 8 7V11M12 15V17M12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12C21 16.9706 16.9706 21 12 21Z" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    <rect x="4" y="11" width="16" height="10" rx="2" stroke="white" stroke-width="2" />
                                    <circle cx="12" cy="16" r="2" fill="white" />
                                </svg>
                            </div>
                            <h2 class="text-center mb-3">Create Your AvenderLine Account</h2>
                            <p class="text-center opacity-75">
                                Unlock Exclusive Access to Qatar's Finest Abaya Collections
                            </p>
                        </div>

                        <!-- Right Column -->
                        <div class="col-lg-7">
                            <div class="p-5">
                                <h3 class="form-title d-none d-lg-block">New Registration</h3>
@* 
                                <!-- Social Login -->
                                <div class="d-flex flex-row align-items-center justify-content-center mb-3">
                                    <form asp-action="GoogleLogin" asp-route-returnUrl="@Model.ReturnUrl" method="get">
                                        <button name="provider" type="submit" title="Login using Google" value="Google"
                                                class="btn btn-danger btn-floating">
                                            <i class="fab fa-google me-2"></i>Register with Google
                                        </button>
                                    </form>
                                </div> *@

                                <div class="divider my-4">
                                    <p class="text-center fw-bold mx-3 mb-0">Or</p>
                                </div>

                                <!-- Register Form -->
                                <form asp-action="Register" method="post" class="auth-form">
                                    @Html.AntiForgeryToken()
                                    <div asp-validation-summary="All" class="text-danger mb-3 message-animation"></div>

                                   
                                    <div class="password-field">
                                        <input type="email" asp-for="Email" id="emailInput" class="form-control form-control-md"
                                               placeholder="Enter a valid email address" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <!-- Phone Number Input -->
                                    <div class="password-field">
                                        <div class="input-group">
                                            <span class="input-group-text">+974</span>
                                            <input type="tel" asp-for="PhoneNumber" class="form-control form-control-md"
                                                   placeholder="50123456" pattern="[0-9]{8}" required id="PhoneNumber" />
                                        </div>
                                        <small class="form-text text-muted">
                                            Enter 8-digit Qatari number (e.g. 50123456)
                                        </small>

                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>

                                    <!-- Password Input -->
                                    <div class="password-field">
                                        <div class="input-wrapper">
                                            <input type="password" asp-for="Password" id="Password" class="form-control form-control-md"
                                                   placeholder="Enter password" />
                                            <span class="password-toggle" id="togglePassword">
                                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M15 12C15 13.6569 13.6569 15 12 15C10.3431 15 9 13.6569 9 12C9 10.3431 10.3431 9 12 9C13.6569 9 15 10.3431 15 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                                    <path d="M12 5C17.5228 5 22 12 22 12C22 12 17.5228 19 12 19C6.47715 19 2 12 2 12C2 12 6.47715 5 12 5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                                </svg>
                                            </span>
                                        </div>
                                      
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                        <div class="strength-meter mt-2" id="strengthMeter"></div>
                                        <div id="passwordStrengthMessage" class="small mt-1"></div>
                                    </div>

                                    <!-- Confirm Password Input -->
                                    <div class="password-field">
                                        <div class="input-wrapper">
                                            <input type="password" asp-for="ConfirmPassword" id="ConfirmPassword" class="form-control form-control-md"
                                                   placeholder="Confirm password" />
                                            <span class="password-toggle" id="toggleConfirmPassword">
                                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M15 12C15 13.6569 13.6569 15 12 15C10.3431 15 9 13.6569 9 12C9 10.3431 10.3431 9 12 9C13.6569 9 15 10.3431 15 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                                    <path d="M12 5C17.5228 5 22 12 22 12C22 12 17.5228 19 12 19C6.47715 19 2 12 2 12C2 12 6.47715 5 12 5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                                </svg>
                                            </span>
                                        </div>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        <div id="passwordMatchMessage" class="small mt-1"></div>
                                    </div>

                                    <!-- Submit Button -->
                                    <div class="form-group mt-4 pt-2">
                                        <button type="submit" class="submit-btn w-100" data-action="register" aria-label="Submit registration form">
                                            Register <span class="visually-hidden">your account</span>
                                            <svg class="ms-2" width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M13 5L20 12L13 19M4 12H20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                            </svg>
                                        </button>
                                    </div>
                                </form>

                                <!-- Login Link -->
                                <div class="text-center mt-4 login-link">
                                    <p class="small mb-0">
                                        Already have an account? <a asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="link-danger">Login</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/zxcvbn/4.4.2/zxcvbn.js"></script>
}